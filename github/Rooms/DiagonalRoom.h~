
#ifndef DIAGONALROOM_H
#define DIAGONALROOM_H

#include "Room.h"
#include "./../Globals.h"
#include <iostream>
#include <string>

class DiagonalRoom: public Room{
  public:
    DiagonalRoom(bool isVisible=true, bool* whichExits=NULL, std::string description="");
    ~DiagonalRoom();

    virtual int directionToIndex(int whichDirection) const;
    
    virtual int getRoomExitDirection(int whichDirection) const{
      int roomExits[] = {NE,SE,SW,NW};
      return roomExits[whichDirection];
    }

  protected:
};

#endif
